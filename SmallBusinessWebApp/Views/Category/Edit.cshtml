@model SmallBusinessWebApp.Models.CategoryModelView
@{
    Layout = "~/Views/Shared/_MuTheme.cshtml";
}




<div>
    <form class="form-horizontal" method="POST" style="background-color:lightgray">
        <p class="h4 mb-4" style="color:cornflowerblue">Category Delete</p>

        <h2>
            @if (ViewBag.SuccessMsg != null)
            {
                <h3 style="color:green">@ViewBag.SuccessMsg</h3>
            }
            @if (ViewBag.ErrorMsg != null)
            {
                <h3 style="color:orangered">@ViewBag.ErrorMsg</h3>
            }
        </h2>
        <div class="contetainer">

            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <div class="form-group">

                        @Html.LabelFor(c => c.Code, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">

                            @Html.TextBoxFor(c => c.Code, null, new { @class = "form-control", placeholder = "Code", @readonly = "true" })
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label class="control-label col-sm-2" for="Address">Address:</label>*@
                        @Html.LabelFor(c => c.CategoryName, null, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @*<input type="text" class="form-control" id="Address" name="Address" placeholder="Address">*@
                            @Html.TextBoxFor(c => c.CategoryName, null, new { @class = "form-control", placeholder = "CategoryName", @readonly = "true" })
                        </div>
                    </div>

                    
                   

                    



                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success" value="Delete">Delete</button>
                        </div>
                    </div>


                </div>

            </div>

        </div>



    </form>
    <button style="margin-left:485px;" class="btn btn-outline-success"> <a href="~/Product/Show">Product List</a></button>
</div>






<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
